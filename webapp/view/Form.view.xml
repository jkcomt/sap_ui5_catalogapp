<mvc:View
	controllerName="appviewcatalog.controller.Form"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
>
	<Page
		id="page"
		title="{i18n>title}"
	>
		<content>
			<VBox class="sapUiSmallMargin">
				<f:Form id="FormChange354" editable="true">
					<f:title>
						<core:Title text="Address"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
						/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Product ID">
									<f:fields>
										<Input value="" id="producid" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Main Category - Category">
									<f:fields>
										<!-- <Input value=""/>  -->
										<ComboBox
											items="{
												path: '/MainCategoriesCollection',
												sorter: { path: 'text' }
											}">
											<core:Item key="{key}" text="{mainCategory}" />
										</ComboBox>
										<ComboBox
											items="{
												path: '/CategoriesCollection',
												sorter: { path: 'text' }
											}">
											<core:Item key="{key}" text="{category}" />
											<layoutData>
												<l:GridData span="XL1 L2 M2 S4"/>
											</layoutData>
										</ComboBox>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Name">
									<f:fields>
										<Input value=""/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Description">
									<f:fields>
										<Input value=""/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Supplier Name">
									<f:fields>
										<Input value=""/>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<f:Form id="FormWeigh" editable="true" class="sapUiSmallMarginTop" >
					<f:title>
						<core:Title text="Weigh"/>
					</f:title>
					<f:layout>
						<f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
						/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:formElements>
								<f:FormElement label="Weigh Mesaure">
									<f:fields>
										<Input value=""/>
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Weigh Unit">
									<f:fields>
										<RadioButtonGroup id="groupWeigh" columns="2" valueState="Success">
											<RadioButton text="KG" selected="true" />
											<RadioButton text="LB" />
										</RadioButtonGroup>
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
				<f:Form id="FormDetails"
					editable="true" class="sapUiSmallMarginTop">
					<f:title>
						<core:Title text="Details"/>
					</f:title>
					<f:layout>
                    <f:ResponsiveGridLayout
							labelSpanXL="3"
							labelSpanL="3"
							labelSpanM="3"
							labelSpanS="12"
							adjustLabelSpan="false"
							emptySpanXL="4"
							emptySpanL="4"
							emptySpanM="4"
							emptySpanS="0"
							columnsXL="1"
							columnsL="1"
							columnsM="1"
							singleContainerFullSize="false"
						/>
					</f:layout>
					<f:formContainers>
						<f:FormContainer>
							<f:FormElement label="DateOfSale">
								<f:fields>
									<DatePicker
										id="dateSale"
										placeholder="Enter Date"
										change="handleChange"
										class="sapUiSmallMarginBottom"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Available">
								<f:fields>
									<Switch state="true" customTextOn="YES" customTextOff="NO">
										<layoutData>
											<FlexItemData growFactor="1" />
										</layoutData>
									</Switch>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Quantity">
								<f:fields>
									<Input value=""/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Currency Code">
								<f:fields>
									<RadioButtonGroup id="groupCurrency" columns="2" valueState="Success">
											<RadioButton text="PEN" selected="true" />
											<RadioButton text="USD" />
										</RadioButtonGroup>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Price">
								<f:fields>
									<Input value=""/>
								</f:fields>
							</f:FormElement>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Submit" press="onPress" type="Accept"/>
				<Button text="Reject" press="onPress" type="Reject"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>