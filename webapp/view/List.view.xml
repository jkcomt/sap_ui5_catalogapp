<mvc:View controllerName="appviewcatalog.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page title="Vista List" showNavButton="true" navButtonPress="onNavBack">
    <headerContent>
        <Button text="Open Form" press="onOpenDialog"/> 
        <core:Fragment fragmentName="appviewcatalog.view.fragments.HeaderContent" type="XML"/>
    </headerContent>
        <content>
            <VBox class="sapUiContentPadding sapUiSmallMargin">
                <!-- <Breadcrumbs id="navHistory"/> -->
               
                <OverflowToolbar>
                    <SearchField liveChange=".onSearchFromDB" width="100%"/>
                </OverflowToolbar>
             
                    <!-- <List 
                        id="listProducts"
                        items="{path:'mProduct>/ProductCollection'}" 
                        mode="SingleSelectMaster" 
                        itemPress="onPressProduct" 
                        growing="true" 
                        growingThreshold="10" 
                        growingScrollToLoad="false">                   
                        <StandardListItem title="{mProduct>Name}" 
                            description="{mProduct>Description}" 
                            icon="{mProduct>ProductPicUrl}" 
                            type="Active" />
                    </List> -->

                <List items="{path:'mNorthwind>/Products'}"
                    id="listProducts"
                    growing="true" 
                    growingThreshold="10"
                >
                    <StandardListItem title="{mNorthwind>ProductName} - {mNorthwind>UnitPrice}" />
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>