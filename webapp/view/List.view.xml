<mvc:View controllerName="appviewcatalog.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page title="Vista List">
        <content>
            <VBox class="sapUiContentPadding sapUiSmallMargin">
                <List 
                    items="{path:'mProducts>/ProductCollection'}" 
                    mode="SingleSelectMaster" 
                    itemPress="onPressProduct" 
                    growing="true" growingThreshold="10" 
                    growingScrollToLoad="false">
                    <!-- Seccion header toolbar -->
                    <headerToolbar>
                        <OverflowToolbar >
                            <Title text="Productos" />
                            <ToolbarSpacer/>
                            <Button icon="sap-icon://settings"/>
                        </OverflowToolbar>
                    </headerToolbar>

                    <!-- SecciÃ³n Items -->
                    <StandardListItem title="{mProducts>Name}" 
                        description="{mProducts>Description}" 
                        icon="{mProducts>ProductPicUrl}" 
                        type="Active" />
                </List>
            </VBox>
        </content>
    </Page>
</mvc:View>